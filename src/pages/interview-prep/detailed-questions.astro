---
import MainLayout from '../../layouts/MainLayout.astro';
import Navbar from '../../components/Navbar.astro';
import { getMarkdownFiles } from '../../utils/getMarkdownFiles';
import path from 'path';

const contentDir = path.join(process.cwd(), 'src', 'markdown-content');
const basePath = path.join(contentDir, 'interview-prep/detailed-questions/interview-questions-react-lead');
const files = getMarkdownFiles(basePath);
---

<MainLayout title="Detailed Interview Questions">
  <Navbar />

  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <header class="mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          üìö Detailed Interview Questions
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Comprehensive interview preparation materials with in-depth answers and diagrams
        </p>
      </header>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          React Lead Interview Questions - FPT Software
        </h2>

        <div class="grid gap-4">
          {files.map((file) => (
            <a
              href={`/interview-prep/detailed-questions/interview-questions-react-lead/${file.slug}`}
              class="block p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-400 hover:shadow-md transition-all"
            >
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                {file.title}
              </h3>
            </a>
          ))}
        </div>
      </div>

      <div class="mt-8">
        <a
          href="/interview-prep"
          class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline"
        >
          ‚Üê Back to Interview Prep
        </a>
      </div>
    </main>
  </div>
</MainLayout>
